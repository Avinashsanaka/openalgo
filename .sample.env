# Configuration Version
ENV_CONFIG_VERSION=1.0.0

# Broker Configuration
VALID_BROKERS=angel,zerodha,fivepaisa,dhan,flattrade
BROKER_API_KEY=your_api_key
BROKER_API_SECRET=your_api_secret
REDIRECT_URL=http://127.0.0.1:5000/angel/callback

# App Security
APP_KEY=change_this_to_a_random_secret_string
API_KEY_PEPPER=change_this_to_another_random_secret_string

# Database
DATABASE_URL=sqlite:///database.db

# Server Configuration
HOST_SERVER=http://127.0.0.1:5000
FLASK_HOST_IP=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_ENV=development
NGROK_ALLOW=False

# Session
SESSION_EXPIRY_TIME=03:00

# Rate Limiting
LOGIN_RATE_LIMIT_MIN=5 per minute
LOGIN_RATE_LIMIT_HOUR=100 per hour
API_RATE_LIMIT=60 per minute
ORDER_RATE_LIMIT=10 per second
SMART_ORDER_RATE_LIMIT=5 per second
WEBHOOK_RATE_LIMIT=10 per second
STRATEGY_RATE_LIMIT=10 per second

# Smart Order
SMART_ORDER_DELAY=0.5

# WebSocket
WEBSOCKET_HOST=127.0.0.1
WEBSOCKET_PORT=8765
WEBSOCKET_URL=ws://127.0.0.1:8765

# Logging
LOG_TO_FILE=False
LOG_LEVEL=INFO
LOG_DIR=log
LOG_FORMAT=[%(asctime)s] %(levelname)s in %(module)s: %(message)s
LOG_RETENTION=14
